</head>

<body>
    <div class="agregar">
        <div class="col-md-6 offset-md-3 formagregar">
            <div class="container-fluid">
                <h4>Agregar una nueva novedad</h4>
                <form class="row g-4" action="/admin/novedades/agregar" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control forminput" name="titulo" placeholder="Titulo">
                    </div>
                    <div class="form-group">
                        <textarea type="text" class="form-control forminput" name="subtitulo" placeholder="Subtitulo" rows="3"></textarea>
                    </div>
                    <div class="form-group">
                        <textarea type="text" class="form-control forminput" name="cuerpo" placeholder="Cuerpo" rows="6"></textarea>
                    </div>
                    <div>
                    <button type="submit" class="btn btn-outline-light">Guardar</button>
                    {{#if error}}
                    {{message}} 
                    {{/if}}
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>